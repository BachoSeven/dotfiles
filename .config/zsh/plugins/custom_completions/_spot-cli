#compdef ncspot-cli

local arguments

arguments=(
	'-h, --help[Display usage instructions]'
	'-n, --next[Next song]'
	'-p, --prev[Previous song]'
	'-t, --toggle[Play/Pause]'
	'-s, --stop[Stop]'
	'--pause[Pause song]'
        '--play[Play song]'
	'-u, --url [Open URL]'
	'--uri [Open URI (spotify:* format)]'
	'--seek [Seek/Rewind (seconds)]'
	'--set [Jump to (seconds)]'
)

_arguments -s $arguments
