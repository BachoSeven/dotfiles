			g4txt='mctl share-text /org/mconnect/device/1'g \
			g4file='mctl share-file /org/mconnect/device/1'g \
			g4sms='mctl send-sms /org/mconnect/device/1'
	_exists bookmenu && alias bookmenu='OUT=$HOME bookmenu'
