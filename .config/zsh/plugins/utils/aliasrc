# Remove spaces
	alias rsf='find -name "* *" -type f | rename "s/ /_/g"'
	alias rsd='find -name "* *" -type d | rename "s/ /_/g"'
	alias rsb='find -name "*(*)*" -type f | rename "s/\(|\)|\[|\]//g"'

