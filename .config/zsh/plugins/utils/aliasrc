# Remove spaces, curly+squared brackets and commas
	alias rsf='find -name "* *" -type f | perl-rename "s/ /_/g"'
	alias rsd='find -name "* *" -type d | perl-rename "s/ /_/g"'
	alias rsbd='find -name "*(*)*" -type d | perl-rename "s/\(|\)|\[|\]//g"'
	alias rsbf='find -name "*(*)*" -type f | perl-rename "s/\(|\)|\[|\]//g"'
	alias rscd='find -name "*,*" -type d | perl-rename "s/,/_/g"'
	alias rscf='find -name "*,*" -type f | perl-rename "s/,/_/g"'

