# vi: ft=zsh
## This file is kept bash-compatible for use with dmenu_aliases

## Basics

# Pacman
	alias clean='sudo pacman -Rns $(pacman -Qtdq)'
	alias rip="expac --timefmt='%Y-%m-%d %T' '%l\t%n %v' | sort | tail -50"
	alias removeTotPkgsAfterInput="rip | grep -A $1 $2 | cut -d ' ' -f2 | awk '{print $2}' | xargs sudo pacman -Rsc"
	alias browsepac="pacman -Qqe | fzf --preview 'pacman -Qi {}' --layout=reverse --bind 'enter:execute(pacman -Qil {} | less)'"

# Enable aliases to be sudoâ€™ed
	alias sudo='sudo '

# SSH
	alias vote='ssh aur@aur.archlinux.org vote'
	alias phc='export TERM=xterm-256color; ssh minnocci@poisson.phc.dm.unipi.it'

# Default to human readable figures and colorize
	alias df='df --si --print-type'
	alias du='du --si'
	alias ls='ls --si --classify --group-directories-first'
	alias free='free --si'
	alias l='ls --color -lA'
	alias rd='rmdir'
	alias mkdir='mkdir -p --verbose'
	alias dmesg='dmesg --human'
	alias history="history -i -34"
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
	alias grep="grep --color=auto"
	alias diff="diff --color=auto"
	alias ip='ip -color=auto'
	alias ccat="highlight --replace-tabs=8 --out-format=xterm256 --style=pablo --force --"
	alias path='echo $PATH | tr : "\n"'

# Shorter commands
alias \
	ka='killall' \
	g='git' \
	gca='g commit -a && g push' \
	glol="git log --graph --pretty='\''%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'\'' --stat'" \
	trem='transmission-remote' \
	z='zathura'

