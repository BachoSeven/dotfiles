set bell-style none
# Fixes some buttons when using St
set enable-keypad			on
set colored-stats			on
set visible-stats			on
set mark-symlinked-directories		on
set colored-completion-prefix		on
set blink-matching-paren		on
set comment-begin			#
set completion-prefix-display-length	111
set completion-query-items		200
set keyseq-timeout 			100
set input-meta				on
set convert-meta			off
set output-meta				on
set disable-completion			off
set echo-control-characters		on
set match-hidden-files			off
set page-completions			on
set completion-ignore-case		on
set show-all-if-ambiguous		on
set show-all-if-unmodified		on
set print-completions-horizontally	on

# Tab for printing completion; Shift+Tab for cycling through completions
Tab: complete
"\e[Z": menu-complete

set editing-mode vi
$if mode=vi
	# $if Octave # NOTE: Uncomment this if-clause for `octave --gui`
		# set show-mode-in-prompt off
	# $else
		set show-mode-in-prompt on

		$if term=linux
			set vi-ins-mode-string \1\e[?0c\2
			set vi-cmd-mode-string \1\e[?8c\2
		$else
			set vi-ins-mode-string \1\e[6 q\2
			set vi-cmd-mode-string \1\e[2 q\2
		$endif

		set keymap vi-command
		# these are for vi-command mode
		Control-l: clear-screen
		Control-a: beginning-of-line
		j: history-search-forward
		k: history-search-backward

		set keymap vi-insert
		# these are for vi-insert mode
		Control-p: previous-history
		Control-n: next-history
		Control-l: clear-screen
		Control-a: beginning-of-line
		# `kj` enters normal mode.
		"kj": vi-movement-mode
		# switch to block cursor before executing a command
		RETURN: "\e\n"
	# $endif
$endif
