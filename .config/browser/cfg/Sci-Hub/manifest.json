{
  "name": "Sci-Hub",
  "version": "0.2.1",
  "manifest_version": 2,
  "description": "Sci-Hub extension for Chromium browsers",
  "homepage_url": "https://sci-hub.ru/",
  "update_url": "https://sci-hub.ru/update",
 "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": ["activeTab","tabs", "webRequest", "webRequestBlocking"],
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "scripts": ["src/sci-hub-fy.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
    "*://*.sci-hub.se/*",
    "*://sci-hub.se/*",
    "*://*.sci-hub.tw/*",
    "*://sci-hub.tw/*",
    "*://*.sci-hub.ru/*",
    "*://sci-hub.ru/*",
    "*://*.sci-hub.st/*",
    "*://sci-hub.st/*",
    "https://scholar.google.com/*",
    "https://scholar.google.ru/*",
    "https://scholar.google.ca/*",
    "https://scholar.google.uk/*",
    "https://scholar.google.lv/*",
    "https://scholar.google.com.ph/*",
    "https://scholar.google.com.ua/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject.js"
      ],
      "css": [
	"css/panel.css"
	]
    }
  ]
}
