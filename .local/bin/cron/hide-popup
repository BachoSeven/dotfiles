#!/bin/sh

if ! pidof chromium chrome vieb spotify teams-insiders >/dev/null 2>&1 ; then
	exit 0
else
	rm -rf ~/.pki ~/.cache/chromium ~/Downloads

	xdotool search --name "is sharing your screen" \
		| while read -r wid; do
		if xwininfo -id "$wid" >/dev/null 2>&1; then
			xdotool windowclose "$wid"
		fi
	done
fi
