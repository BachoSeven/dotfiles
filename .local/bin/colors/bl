#!/bin/sh

# Wrapper to set a solid color as background

# Cleanup
	killall -q xrootgif xwinwrap &


# -?
	if [ "$1" = "-n" ]; then
		noise=1
		shift
	fi

# defs
	c=${1:-252525}

# Set background
	if [ $noise ]; then
		tmp="/tmp/tile.png"
		convert -size 128x128 canvas:\#$c -separate -seed 1000 \
			-attenuate 0.13 +noise gaussian -combine -colorspace sRGB "$tmp"
		hsetroot -tile "$tmp"
	else
		hsetroot -solid \#$c &
	fi

# Unset background to enable restoring solid color on reboot
	rm -f $XDG_DATA_HOME/bg

# Save color for the aforementioned purpose
	echo "#$c" > ${XDG_CACHE_HOME:-$HOME/.cache}/bgcol
