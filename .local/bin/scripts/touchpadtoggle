#!/bin/sh

msgId="2298"
deviceId="$(xinput list | grep "Touchpad" | sed -n -e 's/^.*id=//p'|cut -f1)"

on() {
	dunstify -u normal -t 3000 -r $msgId "üñ≤Ô∏è Touchpad enabled"
	xinput enable $deviceId
}

off() {
	xinput disable $deviceId
	dunstify -u normal -t 3000 -r $msgId "üñ≤Ô∏è Touchpad disabled"
}

xinput list $deviceId | grep -q 'This device is disabled' && on || off
