#!/bin/sh

# Francesco Minnocci 2020
# This takes care of my external monitor setup, mostly for non-interactive purposes.

connected() {
	if xrandr -q | grep "\b$ext connected"; then
		return 0
	else
		return 1
	fi
}

miscfixes() {
	sbg # redraw background
	dunstreload # Reload dunst configuration
	cqctl magic
}

main() {
  int=${int:-eDP-1}
  ext=${ext:-HDMI-2}
	while getopts ":elm" o; do
		case "${o}" in
			e) # External
				connected && xrandr --output $int --off --output $ext --mode 2560x1440 --dpi 120 && miscfixes ;;
			l) # Laptop
				xrandr --output $ext --off --output $int --auto --dpi 96 && miscfixes ;;
			m) # Multi
				connected && xrandr --output $int --auto --output $ext --primary --auto --right-of $int --dpi 120 && miscfixes ;;
			*)
				printf "Invalid option: -%s\n" "$OPTARG"
				printf "usage: $name [-e|-m|-l]\n" && exit 1 ;;
		esac
	done
}

# The actual script starts here
name="$(basename $0)"
main "$@"
