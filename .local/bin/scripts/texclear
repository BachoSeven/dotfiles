#!/bin/sh

# Clears the build files of a LaTeX/XeLaTeX build.
# I have vim run this file whenever I exit a .tex file.

case "$1" in
	*.tex)
	file=$(realpath "$1")
	dir=$(dirname "$file")
	base="${file%.*}"
	find "$dir"  -maxdepth 1 -type f -regextype gnu-awk -regex "^$base((\\.(4tc|xref|tmp|pyc|dvi|pyo|fls|vrb|fdb_latexmk|bak|swp|aux|log|synctex\\(busy\\)|lof|lot|maf|idx|mtc|mtc0|nav|out|snm|toc|run\\.xml|synctex\\.gz|blg|bbl|bcf))|_vimtex\\.(synctex\\.gz|pdf))" -delete ;;
	*) printf "Give .tex file as argument.\\n" ;;
esac
