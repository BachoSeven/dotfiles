#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send -i /usr/share/icons/Gruvbox-Material-Dark-HIDPI/64x64/categories/calendar.svg "Questo mese:" "$(cal --color=always | sed "s/..7m/<b><span color=\"#cc241d\">/;s/..27m/<\/span><\/b>/")"  ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+%a %d %b %R"
